<resources>
    <!-- Define a custom style for the tabs in the TabLayout -->
    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/tabSelectedTextColor</item>
        <item name="tabTextColor">@color/tabUnselectedTextColor</item>
    </style>

</resources>