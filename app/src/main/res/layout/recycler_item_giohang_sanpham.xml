<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="12.5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@color/white">
            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="58dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtNameProduct"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:text="DAZY Áo cổ lọ màu trơnDAZY Áo cổ lọ màu trơn"
                        android:textSize="12dp"
                        android:textColor="#000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:paddingStart="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/img_icon_shop" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:text="DAZY"
                        android:textSize="12dp"
                        android:textColor="#000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="18dp"
                    android:paddingStart="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtsize"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:text="1"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="17dp" />
                    <Spinner
                        android:id="@+id/size_spinner"
                        android:layout_width="28dp"
                        android:layout_height="18dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:id="@+id/txtPriceProduct"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="99.999đ"
                    android:textColor="#000"
                    android:textSize="19dp"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/white"
                    app:srcCompat="@drawable/icon_tru" />

                <TextView
                    android:id="@+id/count_product"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="1"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="17dp" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/white"
                    app:srcCompat="@drawable/icon_cong" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>